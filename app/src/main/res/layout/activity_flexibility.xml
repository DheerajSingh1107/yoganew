<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:scrollbars="vertical"
        tools:context=".FlexibilityActivity">

        <RelativeLayout
            android:id="@+id/Flexibilityheader_relavitveLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/layoutheaderimage"
            android:layout_margin="5dp"

            >
            <TextView
                android:id="@+id/FlexibilityclassesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Classes"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"

                />
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FlexibilityclassesText"
                android:text="Focused on Strength,balance and flexibility. Find you favorite class"
                android:layout_centerHorizontal="true"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:textSize="15sp"

                />


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/FlexibilityBeginnerLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/begginer"
                />
            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/FlexibilitystrengthText"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Let's Start with light Exersice"
                    android:layout_centerHorizontal="true"

                    android:textSize="15sp"
                    android:textStyle="bold"


                    />
                <TextView
                    android:id="@+id/FlexibilitystrengthTextDetails"
                    android:layout_width="200dp"

                    android:layout_height="wrap_content"
                    android:text="Focuses on building strength and endurance by creating a firm foundation."
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="13dp"
                    android:layout_below="@+id/FlexibilitystrengthText"




                    />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FlexibilityIntermediateLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/intermediate"
                />
            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/FlexibilitybalanceText"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Step a more difficult exersice"
                    android:layout_centerHorizontal="true"

                    android:textSize="15sp"
                    android:textStyle="bold"


                    />
                <TextView
                    android:id="@+id/FlexibilitybalanceTextDetails"
                    android:layout_width="200dp"

                    android:layout_height="wrap_content"
                    android:text="is for those who have strong practice and prior yoga experience."
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="13dp"
                    android:layout_below="@+id/FlexibilitybalanceText"



                    />


            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/FlexibilityAdvanceLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/advance"
                />
            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/FlexibilityflexibilityText"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Difficult exercises"
                    android:layout_centerHorizontal="true"

                    android:textSize="15sp"
                    android:textStyle="bold"


                    />
                <TextView
                    android:id="@+id/FlexibilityflexibilityTextDetails"
                    android:layout_width="200dp"

                    android:layout_height="wrap_content"
                    android:text="is for dedicated and very committed who have strong practice to participate."
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="13dp"
                    android:layout_below="@+id/FlexibilityflexibilityText"



                    />


            </RelativeLayout>
        </LinearLayout>








    </LinearLayout>
</ScrollView>